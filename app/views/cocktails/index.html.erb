<h1>Mister Cocktails</h1>

<div class="row">
  <% @cocktails.each do |cocktail| %>
  <div class="col-xs-12 col-sm-4">
    <div class="card">
    <%= link_to cocktail.name, cocktail_path(cocktail.id) %>
    </div>
  </div>
  <% end %>
</div>

  <%= link_to new_cocktail_path do %>
    <i class="fa fa-plus"></i> Add a new cocktail
  <%end%>

